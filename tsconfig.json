{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "rootDir": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "exclude": ["node_modules"]
}